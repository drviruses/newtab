{
    "manifest_version" : 2,  
    "name" : "Tab",
    "version" : "1.0",
    "description" : "An Extension which will allow you to open every link in New Tab",
    "icons" : {
        "128" : "128.png",
        "48" : "48.png",
        "16" : "16.png"
    },
    "browser_action" : {
        "default_icon" : "16.png",
        "default_popup" : "index.html"
    },
    "background": {
        "scripts" : [ "jquery-3.5.1.min.js", "fun.js"],
        "persistent" : true
    },
    "content_scripts": [
        {
            "matches": [
                "https://codeforces.com/",
                "https://codechef.com/",
                "https://atcoder.jp/"
            ],
            "run_at": "document_end",
            "js": [
                "jquery-3.5.1.min.js",
                "fun.js"
            ],
            "all_frames" : true
        }
    ],
    "permissions": [
        "https://codeforces.com/",
        "https://codechef.com/",
        "https://atcoder.jp/"
    ]
}